<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Launch Screen theme -->
    <style name="AppTheme.LaunchScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_launch_screen</item>
    </style>

    <!--Login Theme with USU Background-->
    <style name="AppTheme.LoginUSUBackground" parent="AppTheme">
        <item name="android:windowBackground">@drawable/login_background_oldmain_vert</item>
    </style>

    <!--Login Theme-->
    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>




    <!--Buttons-->
    <style name="ButtonPrimary">
        <item name="android:background">@drawable/button_primary_background</item>
    </style>

    <style name="UsuEventsButton" parent="ButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/material_design_keyline_one</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- OnBoarding/Login -->
    <style name="OnBoardingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/material_design_keyline_one</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OnBoardingCtaRegister">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OnBoardingCtaLogin" parent="UsuEventsButton">
        <item name="android:background">@drawable/button_white_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/material_design_keyline_one</item>
    </style>

    <!--Facebook Button-->
    <style name="FacebookLoginButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/com_facebook_button_background</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10.5dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10.5dp</item>
        <item name="android:textColor">@color/com_facebook_button_text_color</item>
        <item name="android:textSize">14.0dp</item>
    </style>


</resources>
