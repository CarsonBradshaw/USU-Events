<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolBarStyle"
            app:navigationIcon="?attr/actionModeCloseDrawable"
            app:title="Event Title Would Go Here">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_event_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/test_background_1"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/activity_event_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:text="Event Title Would Go Here"
                    android:textColor="@android:color/black"
                    android:textSize="28sp"
                    app:layout_constraintHorizontal_bias="0.312"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/activity_event_channel_top_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_event_title"/>

                <TextView
                    android:id="@+id/activity_event_channel_topic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Topic Would Go Here"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_event_channel_top_line"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/activity_event_channel_bottom_line"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_event_channel_top_line"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nav_subscriptions"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:text="SUBSCRIBE"/>

                </LinearLayout>

                <View
                    android:id="@+id/activity_event_channel_bottom_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_event_channel_topic"/>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/activity_event_calendar_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_event_channel_bottom_line"
                    android:layout_marginTop="24dp">

                    <ImageView
                        android:id="@+id/activity_event_calendar_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginStart="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/activity_event_calendar_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toTopOf="@+id/activity_event_calendar_icon"
                        app:layout_constraintLeft_toRightOf="@+id/activity_event_calendar_icon"
                        android:layout_marginStart="18dp"
                        android:text="Wednesday, August 12"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/activity_event_calendar_date_text"
                        app:layout_constraintLeft_toRightOf="@+id/activity_event_calendar_icon"
                        android:layout_marginStart="18dp"
                        android:text="6:00 PM - 10:00 PM"
                        />


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/activity_event_location_section"
                    app:layout_constraintTop_toBottomOf="@+id/activity_event_calendar_section"
                    android:layout_marginStart="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/activity_event_location_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_location"
                        android:layout_marginStart="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/activity_event_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toTopOf="@+id/activity_event_location_icon"
                        app:layout_constraintLeft_toRightOf="@+id/activity_event_location_icon"
                        android:layout_marginStart="18dp"
                        android:text="Maverik Stadium, Logan, UT"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/activity_event_location_text"
                        app:layout_constraintLeft_toRightOf="@+id/activity_event_location_icon"
                        android:layout_marginStart="18dp"
                        android:text="123 Fake Address, Logan, UT 84003"
                        />


                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/activity_event_price_section"
                    app:layout_constraintTop_toBottomOf="@+id/activity_event_location_section"
                    android:layout_marginStart="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/activity_event_price_icon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_ticket"
                        android:layout_marginStart="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        app:layout_constraintLeft_toRightOf="@+id/activity_event_price_icon"
                        app:layout_constraintTop_toTopOf="@+id/activity_event_price_icon"
                        app:layout_constraintBottom_toBottomOf="@+id/activity_event_price_icon"
                        android:text="Free"/>

                </android.support.constraint.ConstraintLayout>


            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>