<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/subscriptions_header_notification_clickable_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="7dp">

            <ImageView
                android:id="@+id/subscriptions_header_notification_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:alpha=".8"
                app:srcCompat="@drawable/ic_active_notification"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/subscriptions_header_notification_icon"
                android:text="Enabled"
                android:textColor="@color/colorPrimaryBlue"
                android:textStyle="bold|italic"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/subscriptions_header_manage_clickable_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:text="@string/main_subscriptions_manage_notifications"
            android:textColor="@color/colorPrimaryBlue"
            android:textStyle="bold"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subscriptions_header_manage_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/subscriptions_header_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="72dp"
            android:padding="8dp"
            android:text="CANCEL"
            android:textColor="@color/colorPrimaryBlue"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/subscriptions_header_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_marginEnd="72dp"
            android:padding="8dp"
            android:text="SAVE"
            android:textColor="@color/colorPrimaryBlue"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>