<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/result"
    android:background="@drawable/gradient_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Event!"
        android:layout_gravity="center"
        android:textSize="10pt"
        android:textColor="#fff"
        android:layout_margin="20dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="textPersonName"
        android:hint="Title"
        android:lines="1"
        android:id="@+id/title" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="textMultiLine"
        android:hint="Description"
        android:lines="5"
        android:id="@+id/description" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="textPersonName"
        android:hint="Address (Google Maps coming soon..."
        android:lines="1"
        android:id="@+id/address" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="numberSigned"
        android:lines="1"
        android:hint="Category Id (Subscription List coming soon..)"
        android:id="@+id/category_id" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="numberSigned"
        android:lines="1"
        android:hint="Event Id (Soon to be removed)"
        android:id="@+id/event_id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:paddingRight="5dp"
        android:drawableLeft="@drawable/ic_action_datetime"
        android:text="Date/Time Picker"
        android:textColor="#fff"
        android:id="@+id/date_time"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:text="(Click the icon above to select the start date and time for your event. Once selected the date and time will appear on the button.)" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="textPersonName"
        android:hint="Latitude (removed soon)"
        android:lines="1"
        android:id="@+id/lat" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="textPersonName"
        android:hint="Longitude (removed soon)"
        android:lines="1"
        android:id="@+id/lng" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="#fff"
        android:inputType="textPersonName"
        android:hint="Vote Count (removed soon)"
        android:lines="1"
        android:id="@+id/voteCt" />

    <Button
        android:text="Create Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/insert"
        android:layout_margin="30dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <!--<Button
        android:text="List Events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listevents" />-->


</LinearLayout>
    </ScrollView>