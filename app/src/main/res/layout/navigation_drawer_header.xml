<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:background="@drawable/head_background"

    >

    <ImageView
        android:id="@+id/menuImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/my_photo" />

    <TextView
        android:id="@+id/navUserNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menuImageView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/menuImageView"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif"
        android:text="Test Text"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>