<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"

    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_weight="0.11"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_weight="0.11"
        android:paddingLeft="8dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eventName"
        android:layout_marginTop="19dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_weight="0.11"
        android:maxLines="50"
        android:paddingLeft="8dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/eventName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/reportButton_eventDetail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/subscribeButton_eventDetail"
        android:layout_alignBottom="@+id/subscribeButton_eventDetail"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/subscribeButton_eventDetail"
        android:layout_toRightOf="@+id/subscribeButton_eventDetail"
        android:backgroundTint="#A60059"
        android:text="Report"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/subscribeButton_eventDetail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/interestButton_eventDetail"
        android:layout_alignBottom="@+id/interestButton_eventDetail"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#248F70"
        android:text="Subscribe"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/interestButton_eventDetail"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventDescription"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/subscribeButton_eventDetail"
        android:layout_toStartOf="@+id/subscribeButton_eventDetail"
        android:text="Interested"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/LocationLabel_eventDetail"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="#ffffff"
        android:layout_below="@+id/reportButton_eventDetail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/addressField_eventDetail"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LocationLabel_eventDetail"
        android:textColor="#ffffff" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapEventDetail"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity"
        android:layout_below="@+id/addressField_eventDetail" />

    <TextView
        android:id="@+id/eventTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>